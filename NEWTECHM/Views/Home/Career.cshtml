        align-items: center;
        position: relative;
        z-index: 2;
        padding: 0;
    }

    .career-text {
        max-width: 600px;
        padding: 40px;
        margin-left: 10%;
        background: rgba(7, 28, 77, 0.9);
        border-radius: 10px;
    }

